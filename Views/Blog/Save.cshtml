@using BlogApp.ElasticSearch.WEB.ViewModels;

@{
    ViewData["Title"] = "Save";
}

@model BlogCreateViewModel
<div class="row">

    <div class="col-md-6 offset-md-3">

        @if (TempData["result"] != null)
        {
            <div class="alert alert-info">
            
             @TempData["result"]

            </div>
        }

        <h2>Blog Created</h2>

        <form asp-action="Save">

            <div class="mb-3">
                <label class="form-label" asp-for="Title">Blog Title</label>
                <input class="form-control" asp-for="Title">
            </div>


            <div class="mb-3">
                <label class="form-label" asp-for="Content">Blog Content</label>
                <textarea class="form-control" rows="3" asp-for="Content"></textarea>
            </div>


            <div class="mb-3">
                <label class="form-label" asp-for="Tags">Blog Tags</label>
                <input class="form-control" asp-for="Tags">
            </div>


            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>

    </div>

</div>
